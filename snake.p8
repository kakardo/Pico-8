function check_x(dir,cor)
	if (btn(dir))	then
		if (cor > 0) then
			cor-=8
		end
	end
end

function _init()
	min=0
	max=120
	inc=8
	
	// snake
	x	= 0
	y = 0
end

function _update()
	if (btn(⬅️))	then
		if (x > 0) then
			x-=8
		end
	end
	
	
	//check_x(⬅️,x)

	if (btn(➡️)) then
		if (x < 119) then
			x+=8
		end
	end

	if (btn(⬆️)) y-=8
	if (btn(⬇️)) y+=8

end

function _draw()
	cls()
	
	// corners
	spr(1,0,0)
	spr(2,120,0)
	spr(3,0,120)
	spr(4,120,120)

// border
	for x = 8, max-8, inc do
		spr(0,x,0)
	end
	
	// snake
	spr(9,x,y)
end
